<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="defaultBottomText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/register_small_text</item>
        <item name="android:textColor">@color/hint_disabled_black_text</item>
    </style>

    <style name="defaultBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/bottom_margin_vertical</item>
        <item name="android:background">@drawable/btn_bg_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="inputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_disabled_black_text</item>
    </style>

    <style name="inputLayout.setting">
        <item name="android:layout_marginStart">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="MyDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="editTextStyle.detail">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="editTextStyle.number">
        <item name="android:inputType">number</item>
    </style>

    <style name="gridViewFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">@dimen/small_margin</item>
        <item name="android:horizontalSpacing">@dimen/small_margin</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="textViewFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="homeSettingSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/button_margin_vertical</item>
        <item name="android:paddingRight">@dimen/button_margin_vertical</item>
    </style>

    <style name="filterSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:titleMarginTop">56dp</item>
    </style>

    <style name="settingLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="aboutLabel" parent="settingLabel">
    </style>
</resources>
